<tr id="<%= dom_id campaign %>">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= campaign.name %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= campaign.emails_list.size %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= campaign.status %></td>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
    <% if action_name != "show" %>
      <%= link_to "Show", campaign, class: "text-indigo-600 hover:text-indigo-900" %>
    <% end %>
  </td>
</tr>
